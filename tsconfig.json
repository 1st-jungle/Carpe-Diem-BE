        "module": "NodeNext",
        "moduleResolution": "node",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
